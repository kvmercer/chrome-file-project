{
    "name": "Chrome Downloader",
    "version": "1.0",
    "manifest_version": 2,

    "description": "Download videos from websites",
    "page_action": {
        "default_title": "Download Video",
        "default_popup": "popup.html"
    },
    "permissions": [
        "downloads",
        "activeTab",
        "declarativeContent"
    ],
    "background" : {
        "scripts" : ["background.js"],
        "persistent" : false
    }
}